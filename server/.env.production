# Production Environment Configuration
# This file should be placed in the server directory on your production server

# Environment Configuration
NODE_ENV=production
PORT=5000

# MongoDB Configuration - Update with your production database
MONGODB_URI=mongodb://your-production-db-user:your-production-db-password@your-production-db-host:27017/your-production-db-name?authSource=your-auth-db

# JWT Configuration - Use a strong secret in production
JWT_SECRET=your_super_secure_production_jwt_secret_key_change_this_to_something_very_secure
JWT_EXPIRE=7d

# Server Configuration - Update with your actual domain
CORS_ORIGIN=https://israt18.cse.pstu.ac.bd

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (if using email features)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@israt18.cse.pstu.ac.bd
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@israt18.cse.pstu.ac.bd

# Additional production configurations
SESSION_SECRET=your_session_secret_for_production
