# Sample Environment Configuration File
# Copy this to .env and modify according to your setup

# Environment Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
# Option 1: Direct Connection URI (recommended for simplicity)
MONGODB_URI=mongodb://sandbox:sandbox@localhost:27017/?authSource=sandbox_db

# Option 2: Component-based configuration (alternative)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=sandbox
MONGODB_PASSWORD=sandbox
MONGODB_DATABASE=sandbox_db
MONGODB_AUTH_SOURCE=sandbox_db

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_complex_change_this_in_production
JWT_EXPIRE=7d

# Server Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Deployment Examples:

# For Local Development (direct connection):
# MONGODB_URI=mongodb://sandbox:sandbox@localhost:27017/?authSource=sandbox_db
# SSH_TUNNEL_ENABLED=false

# For Development with SSH Tunnel:
# MONGODB_URI=mongodb://sandbox:sandbox@localhost:27017/?authSource=sandbox_db
# SSH_TUNNEL_ENABLED=true
# SSH_HOST=your-production-server.com
# SSH_USERNAME=your-username
# SSH_PRIVATE_KEY_PATH=/home/user/.ssh/id_rsa

# For Production (direct connection to cloud MongoDB):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sandbox_db?retryWrites=true&w=majority
# SSH_TUNNEL_ENABLED=false
